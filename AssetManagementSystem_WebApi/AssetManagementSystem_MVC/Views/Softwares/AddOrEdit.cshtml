@model AssetManagementSystem_WebApi.Models.Software

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">  
    <h1>CREATE NEW SOFTWARE</h1>  
    @Html.ValidationSummary()  
    <form asp-action="AddOrEdit" asp-controller="Softwares" method="Post">  
  
        <div class="Creatediv">  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Software_Name" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Software_Name, new { placeholder = "Software Name", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Software_Name)  
                </div>  
            </div>  
  
  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Software_Author" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Software_Author, new { placeholder = "Author Name", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Software_Author)  
                </div>
            </div>  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Date_Of_Publish" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Date_Of_Publish, new { placeholder = "Date Of Publish", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Date_Of_Publish)  
                </div>  
  </div>

  <div class="form-group">  
                <div class="col-sm-12 btn-submit">  
                    <button type="submit" class="btn btn-success">Save</button>  
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
                </div>
                </div> 
                </form> 
            </div> 
         
       
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}