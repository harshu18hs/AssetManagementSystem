@using AssetManagementSystem_WebApi.Models
@model Login
@{  
    ViewData["Title"] = "Login";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}  
  
  <body style="background-color:coral;">
<div class="container">  
    <h1>Login</h1>  
    @Html.ValidationSummary()  
    <form asp-action="LoginMvc" asp-controller="Account" method="post">  
  
        <div class="logindiv">  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Username" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Username)  
                </div> 
            </div>  
            </div>
  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Password)  
                </div>  
            </div>  
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>
  
            <div class="form-group">  
                <div class="col-sm-12 btn-submit">  
                    <button type="submit" class="btn btn-success">Login</button> 
                     <button type="reset" class="btn-primary">RESET</button>
                    <a asp-controller="Account" asp-action="RegisterMvc" ><h6 style = "color:green;">Don't have an account?Click to Register</h6>
                        </a>  
                </div>  
            </div>  
        </div>  
    </form> 
</div>  
   </body>