@model AssetManagementSystem_WebApi.Models.Hardware

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">  
    <h1>CREATE NEW HARDWARE</h1>  
    @Html.ValidationSummary()  
    <form asp-action="AddOrEdit" asp-controller="Hardwares" method="Post">  
  
        <div class="AddOrEditiv">  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Hardware_Type" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Hardware_Type, new { placeholder = "Type", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Hardware_Type)  
                </div>  
            </div>  
  
  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Date_of_Publish" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Date_of_Publish, new { placeholder = "Date", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Date_of_Publish)  
                </div>
            </div>  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Price" class="col-lg-3 control-label"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor(m => m.Price, new { placeholder = "Price", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Price)  
                </div>  
                <div class="form-group col-sm-12">  
                <label asp-for="@Model.Price" class="col-lg-3 control-label"></label>  
                <br>  
  </div>

  <div class="form-group">  
                <div class="col-sm-12 btn-submit">  
                    <button type="submit" class="btn btn-success">Save</button>  
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
                </div>
                </div> 
                </form> 
            </div> 
         
       
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}